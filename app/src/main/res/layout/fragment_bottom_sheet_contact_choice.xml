<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/deep_black"
        android:backgroundTint="@color/deep_black"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/top"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_15sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/lv_main"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        style="@style/Chat.Text.Import.Conflict.Name.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/duplicate_contacts"
                        tool:text="Duplicate contacts" />

                    <TextView
                        android:id="@+id/tv_count"
                        style="@style/Chat.Text.Import.Conflict.Name.Title.Data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/duplicate_contacts"
                        tool:text="Duplicate contacts" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_contact_name_db"
                        style="@style/Chat.Text.Import.Conflict.Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/duplicate_contacts"
                        tool:text="Duplicate contacts" />

                    <TextView
                        android:id="@+id/tv_contact_id_db"
                        style="@style/Chat.Text.Import.Conflict.Name.Data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/duplicate_contacts"
                        tool:text="Duplicate contacts" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_contact_name_file"
                        style="@style/Chat.Text.Import.Conflict.Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/duplicate_contacts"
                        tool:text="Duplicate contacts" />

                    <TextView
                        android:id="@+id/tv_contact_id_file"
                        style="@style/Chat.Text.Import.Conflict.Name.Data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/duplicate_contacts"
                        tool:text="Duplicate contacts" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <TextView
                        android:id="@+id/tv_keep_a"
                        style="@style/Chat.Text.Import.Conflict.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_item_import_list_selector"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/keep_a"
                        tool:text="Duplicate contacts" />


                    <TextView
                        android:id="@+id/tv_keep_b"
                        style="@style/Chat.Text.Import.Conflict.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_item_import_list_selector"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/keep_b"

                        tool:text="Duplicate contacts" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_done_sec" />


                <TextView
                    android:id="@+id/tv_title"
                    style="@style/Chat.Text.Bottom.Dialog.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/contacts_exported" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</layout>
