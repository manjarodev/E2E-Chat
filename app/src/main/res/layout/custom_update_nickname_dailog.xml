<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_14sdp"
        android:background="@drawable/bg_dailog">

        <TextView
            android:id="@+id/tv_title"
            style="@style/toolbar_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:gravity="start"
            android:text="Edit nickname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/et_nickname"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/bg_search_view"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="Update nickname here"
            android:inputType="text"
            android:textColor="@color/gray_variant_80"
            android:maxLines="1"
            android:maxLength="28"
            android:paddingHorizontal="@dimen/_15sdp"
            android:paddingVertical="@dimen/_14sdp"
            android:textColorHint="@color/gray_variant_80"
            app:defaultQueryHint="@string/search_chat"
            app:iconifiedByDefault="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:queryBackground="@android:color/transparent" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_update_nickname"
            style="@style/button_dialog_create_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_19sdp"
            android:background="@drawable/bg_button_options"
            android:text="Update"
            android:fontFamily="@font/astronomus_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/et_nickname"
            app:layout_constraintTop_toBottomOf="@id/et_nickname" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            style="@style/button_dialog_create_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_options"
            android:text="@string/cancel"
            android:fontFamily="@font/astronomus_regular"
            app:layout_constraintBottom_toBottomOf="@id/btn_update_nickname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_update_nickname"
            app:layout_constraintTop_toTopOf="@id/btn_update_nickname" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>