<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger gradient rectangle -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
            <gradient
                android:startColor="#8000F8A5"
                android:endColor="#800062FF"
                android:angle="90" />
            <size
                android:width="270dp"
                android:height="80dp"/>
            <stroke
                android:width="1dp"
                android:color="#252528" />
        </shape>
    </item>

    <!-- Smaller solid color rectangle -->
    <item
        android:bottom="1.6dp"
        android:left="1.6dp"
        android:right="1.6dp"
        android:top="1.6dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
            <solid android:color="#252528"/>
        </shape>
    </item>
</layer-list>
