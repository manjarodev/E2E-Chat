<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chat" parent="Theme.MaterialComponents.Light.NoActionBar">
<!--    <style name="Theme.Chat" parent="Theme.Material3.Light.NoActionBar">-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_10</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/faded_black_50</item>
        <item name="colorOnSecondary">@color/faded_black</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Customize your theme here. -->

<!--        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>-->

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:actionMenuTextColor">@color/faded_black</item>
        <item name="actionMenuTextColor">@color/faded_black</item>
    </style>


