
                                                        

    

           

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" android:tag="layout/fragment_agreement_wipe_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/bg_window_fill_color"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_agreement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:src="@drawable/ic_wipe_chat_data"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_32sdp"
                android:background="@drawable/bg_delete_chat_pin"
                android:backgroundTint="@color/gray_variant_10"
                android:orientation="vertical"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_7sdp"
                android:paddingBottom="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@id/iv_agreement">

                <TextView
                    style="@style/Chat.Text.Agreement.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="@string/you_are_about_to_wipe_your_app"
                    app:drawableStartCompat="@drawable/ic_info_agreement" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView

                        style="@style/Chat.Text.Agreement.Option"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:text="@string/_1_agreement"
                        app:layout_constraintTop_toBottomOf="@id/iv_agreement" />

                    <TextView
                        android:id="@+id/tv_agreement_point_one"
                        style="@style/Chat.Text.Agreement.Option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:maxLines="2"
                        android:minLines="2"
                        android:text="@string/agreement_list_one"
                        app:layout_constraintTop_toBottomOf="@id/iv_agreement" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Chat.Text.Agreement.Option"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text="@string/_2_agreement"
                        app:layout_constraintTop_toBottomOf="@id/iv_agreement" />

                    <TextView
                        android:id="@+id/tv_agreement_point_two"
                        style="@style/Chat.Text.Agreement.Option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:maxLines="1"
                        android:minLines="1"
                        android:text="@string/agreement_list_two"
                        app:layout_constraintTop_toBottomOf="@id/iv_agreement" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lvProceed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/space"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <CheckBox
                    android:id="@+id/checkAgree"
                    style="@style/Chat.Text.Agreement.CheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:drawablePadding="@dimen/_8sdp"
                    android:text="@string/i_have_read_and_understood_the_warning_above"
                    android:textSize="@dimen/_10sdp" />

                <LinearLayout
                    android:id="@+id/lvProceed_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginHorizontal="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:alpha="0.4"
                    android:background="@drawable/bg_delete_chat_pin"
                    android:backgroundTint="@color/dark_red"
                    android:clickable="false"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_12sdp">

                    <TextView
                        style="@style/Chat.Text.Button.Chat.VerifyPin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="@string/delete_app"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>


            </LinearLayout>

            <Space
                android:id="@+id/space"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_14sdp"
                app:layout_constraintBottom_toBottomOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
         