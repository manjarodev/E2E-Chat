<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/import_export_dialog_option_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.devbeans.io.chat.utils.views.GradientOutlineView
            android:id="@+id/gradient"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:gradientOutlineCenterColor="@color/gradient_center"
            app:gradientOutlineCornerRadius="4dp"
            app:gradientOutlineEndColor="@color/gradient_end"
            app:gradientOutlineStartColor="@color/gradient_start"
            app:gradientOutlineStrokeWidth="2dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_2sdp"
            android:layout_marginVertical="@dimen/_2sdp"
            android:background="@drawable/bg_dailog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:ellipsize="end"
                android:fontFamily="@font/astronomus_regular"
                android:gravity="start"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="@dimen/_4ssp"
                android:maxLines="1"
                android:text="Select file location"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:id="@+id/lv_vault"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:alpha="0.4"
                    android:background="@drawable/bg_delete_chat_pin"
                    android:backgroundTint="@color/gray_variant_20"
                    android:clickable="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_12sdp">

                    <TextView
                        android:id="@+id/tv_vault"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_10sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/astronomus_regular"
                        android:gravity="center"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="@dimen/_4ssp"
                        android:maxLines="1"
                        android:text="Vault"
                        android:textColor="@color/gray_variant"
                        android:textSize="@dimen/_11ssp"
                        app:drawableStartCompat="@drawable/ic_vault_import_export" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv_external"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20sdp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lv_vault">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:alpha="0.4"
                    android:background="@drawable/bg_delete_chat_pin"
                    android:backgroundTint="@color/gray_variant_20"
                    android:clickable="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_12sdp">

                    <TextView
                        android:id="@+id/tv_external"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_10sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/astronomus_regular"
                        android:gravity="center"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="@dimen/_4ssp"
                        android:maxLines="1"
                        android:text="External"
                        android:textColor="@color/gray_variant"
                        android:textSize="@dimen/_11ssp"
                        app:drawableStartCompat="@drawable/ic_file_import_export" />

                </LinearLayout>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
         