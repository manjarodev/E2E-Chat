<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardElevation="@dimen/_7sdp"
        app:cardCornerRadius="@dimen/_4sdp" android:tag="layout/custom_menu_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_details"
                style="@style/menu_options"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:background="?android:attr/selectableItemBackground"
                android:paddingEnd="@dimen/_10sdp"
                android:text="@string/group_details" />

            <TextView
                android:id="@+id/tv_mute_notification"
                style="@style/menu_options"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:background="?android:attr/selectableItemBackground"
                android:paddingEnd="@dimen/_10sdp"
                android:text="@string/mute_notifications" />
            <TextView
                android:id="@+id/tv_add_contact"
                style="@style/menu_options"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:text="@string/add_to_contacts" />


            <TextView
                android:id="@+id/tv_media_gallery"
                style="@style/menu_options"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:paddingVertical="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:text="@string/media_gallery" />


            <TextView
                android:id="@+id/tv_disappearing_message"
                style="@style/menu_options"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:paddingVertical="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:text="@string/disappearing_messages" />

            <TextView
                android:id="@+id/tv_empty_chat"
                style="@style/menu_options"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:focusable="true"
                android:textColor="@color/faded_black"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:background="?android:attr/selectableItemBackground"
                android:text="@string/empty_chat" />

            <TextView
                android:id="@+id/tv_block"
                style="@style/menu_options"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_10sdp"
                android:textColor="@color/dark_red"
                android:background="?android:attr/selectableItemBackground"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:text="@string/blocked_user" />

            <TextView
                android:id="@+id/tv_unblock"
                style="@style/menu_options"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_10sdp"
                android:textColor="@color/dark_red"
                android:background="?android:attr/selectableItemBackground"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:text="@string/unblock_user" />

            <TextView
                android:id="@+id/tv_exit"
                style="@style/menu_options"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:focusable="true"
                android:textColor="@color/dark_red"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:background="?android:attr/selectableItemBackground"
                android:text="@string/exit_group" />

            <TextView
                android:id="@+id/tv_delete_group"
                style="@style/menu_options"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:focusable="true"
                android:textColor="@color/dark_red"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:background="?android:attr/selectableItemBackground"
                android:text="@string/delete_group" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
         