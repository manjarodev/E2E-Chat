<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_window_fill_color"
        android:layout_marginBottom="@dimen/_8sdp" android:tag="layout/item_contact_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_contact"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_gravity="center_vertical"
            app:civ_border_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/name_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/iv_contact"
            app:layout_constraintLeft_toRightOf="@id/iv_contact"
            app:layout_constraintRight_toLeftOf="@id/iv_qr"
            app:layout_constraintTop_toTopOf="@id/iv_contact"
            >
            <TextView
                android:id="@+id/tv_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:fontFamily="@font/astronomus_regular"
                android:gravity="start"
                android:letterSpacing="-0.01"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@string/chat_name"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toBottomOf="@id/iv_contact"
                app:layout_constraintLeft_toRightOf="@id/iv_contact"
                app:layout_constraintRight_toLeftOf="@id/iv_qr"
                app:layout_constraintTop_toTopOf="@id/iv_contact" />

            <TextView
                android:id="@+id/tv_contact_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:fontFamily="@font/astronomus_regular"
                android:gravity="start"
                android:visibility="gone"
                android:letterSpacing="-0.01"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@string/chat_name"
                android:textColor="@color/gray_variant_40"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toBottomOf="@id/iv_contact"
                app:layout_constraintLeft_toRightOf="@id/iv_contact"
                app:layout_constraintRight_toLeftOf="@id/iv_qr"
                app:layout_constraintTop_toTopOf="@id/iv_contact" />

        </LinearLayout>


        <CheckBox
            android:id="@+id/iv_qr"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            style="@style/CustomCheckbox02"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:visibility="visible"
            android:layout_marginEnd="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="@id/iv_contact"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_contact" />
    </androidx.constraintlayout.widget.ConstraintLayout>
         