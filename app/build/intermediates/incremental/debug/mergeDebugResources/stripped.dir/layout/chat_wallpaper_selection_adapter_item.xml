<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

           

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        tools:viewBindingIgnore="true" android:tag="layout/chat_wallpaper_selection_adapter_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/img_avatar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/roundedCornersImageView" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/select"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:padding="16dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_tick"
            app:tint="@color/core_white" />
    </FrameLayout>
         