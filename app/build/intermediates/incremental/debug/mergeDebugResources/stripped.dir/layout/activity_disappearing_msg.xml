    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_window_fill_color"
        tools:context=".activities.DisappearingMsgActivity" android:tag="layout/activity_disappearing_msg_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:id="@+id/tvSubs"
            style="@style/Chat.Text.Subscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subscription_ended"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:elevation="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubs">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:src="@drawable/ic_back"
                 />

            <TextView
                android:id="@+id/title"
                style="@style/toolbar_title_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_toEndOf="@id/iv_back"
                android:ellipsize="end"
                android:gravity="start"
                android:text="Disappearing messages"
                android:textSize="@dimen/_14ssp" />

        </RelativeLayout>

