            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fragment_container_settings"
                    android:name="androidx.navigation.fragment.NavHostFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:navGraph="@navigation/disappear_nav" />

                <RadioGroup
                    android:id="@+id/radio_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layoutDirection="rtl"
                    android:textAlignment="textStart"
                    android:visibility="gone">

                    <RadioButton
                        android:id="@+id/dis_off"
                        style="@style/disappearing_options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/off" />

                    <RadioButton
                        android:id="@+id/dis_view"
                        style="@style/disappearing_options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/view_once"
                        android:visibility="gone" />

                    <RadioButton
                        android:id="@+id/dis_30_seconds"
                        style="@style/disappearing_options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/_30_seconds" />

                    <RadioButton
                        android:id="@+id/dis_5_min"
                        style="@style/disappearing_options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/_5_minutes" />

                    <RadioButton
                        android:id="@+id/dis_1_hour"
                        style="@style/disappearing_options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/_1_hour" />

                    <RadioButton
                        android:id="@+id/dis_1_day"
                        style="@style/disappearing_options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/_1_day" />

                    <RadioButton
                        android:id="@+id/dis_1_week"
                        style="@style/disappearing_options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/_1_week" />

                    <RadioButton
                        android:id="@+id/dis_custom"
