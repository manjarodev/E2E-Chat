<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/bg_window_fill_color"
        android:layout_height="match_parent" android:tag="layout/auto_lock_setting_fragment_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:id="@+id/change_pin_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_19sdp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_change_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/astronomus_regular"
                android:text="Change your Pin"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintStart_toStartOf="@id/tv_allow_all_notification"
                app:layout_constraintTop_toBottomOf="@id/separator" />

            <TextView
                android:id="@+id/tv_change_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_60sdp"
                android:alpha="0.5"
                android:fontFamily="@font/astronomus_regular"
                android:maxLines="2"
                android:text="Secure your application by setting up the unique passcode"
                android:textColor="@color/white"
                android:textSize="@dimen/_8ssp"
                app:layout_constraintStart_toStartOf="@id/tv_new_message"
                app:layout_constraintTop_toBottomOf="@id/tv_new_message" />

        </LinearLayout>


        <View
            android:id="@+id/separator_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_16sdp"
            android:alpha="0.04"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/change_pin_layout" />

        <LinearLayout
            android:id="@+id/auto_lock_timer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_19sdp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator_1">

            <TextView
                android:id="@+id/tv_auto_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/astronomus_regular"
                android:text="Autolock Timer"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintStart_toStartOf="@id/tv_allow_all_notification"
                app:layout_constraintTop_toBottomOf="@id/separator" />

            <TextView
                android:id="@+id/tv_timer_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_60sdp"
                android:alpha="0.5"
                android:fontFamily="@font/astronomus_regular"
                android:maxLines="2"
                android:text="Set tha lock time according to your privacy needs"
                android:textColor="@color/white"
                android:textSize="@dimen/_8ssp"
                app:layout_constraintStart_toStartOf="@id/tv_new_message"
                app:layout_constraintTop_toBottomOf="@id/tv_new_message" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
         